# EJEMPLO: Configuración para PRODUCCIÓN
# ⚠️  NO usar este archivo en desarrollo
# Renombrar a .env.production cuando necesites desplegar

# Configuración de Base de Datos PostgreSQL para PRODUCCIÓN
DB_USER=app_stock
DB_PASSWORD=TU_PASSWORD_DE_PRODUCCION
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stock_charles
DB_SCHEMA=stock_charles_schema

# URL completa de la base de datos para PRODUCCIÓN
DATABASE_URL=postgresql://app_stock:TU_PASSWORD_DE_PRODUCCION@localhost:5432/stock_charles?options=-csearch_path%3Dstock_charles_schema

# Configuración de Flask para PRODUCCIÓN
SECRET_KEY=TU_CLAVE_SECRETA_SUPER_SEGURA_DE_PRODUCCION
FLASK_ENV=production
FLASK_DEBUG=False

# Configuración de autenticación para PRODUCCIÓN
APP_LOGIN=TU_USUARIO_ADMIN
APP_PASSWORD=TU_PASSWORD_ADMIN_SEGURO

# Configuración CORS para PRODUCCIÓN
CORS_ORIGINS=https://tu-dominio.com

# Puerto para PRODUCCIÓN
PORT=5000
